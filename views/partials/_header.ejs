<header>
  <% if(username){ %>
   <h1>
     <%= username %>
     <form action="/logout" method="POST" style="margin:150px;">
     <input type="submit" value="logout">
     </form>
   </h1>
  <% } else{ %>
   <h1>
     <form action="/login" method="POST" style="margin:150px;">
       <lable for="username">Enter a Username:</lable>
       <input id="username" type="text" name="username" placeholder="username" style="width: 100px">
       <input type="submit" value="submit">
     </form>
   </h1>
  <% } %>
</header>


